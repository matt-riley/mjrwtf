{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>matt-riley/renovate-config",
    "github>matt-riley/renovate-config:go",
    "github>matt-riley/renovate-config:docker",
    "github>matt-riley/renovate-config:github-actions"
  ],
  "packageRules": [
    {
      "description": "Group templ packages",
      "groupName": "templ",
      "matchPackageNames": ["/^github\\.com\\/a-h\\/templ/"],
      "labels": ["templating", "dependencies"]
    },
    {
      "description": "Group GeoIP packages",
      "groupName": "GeoIP",
      "matchPackageNames": ["/^github\\.com\\/oschwald\\//"],
      "labels": ["geo", "dependencies"]
    }
  ]
}
